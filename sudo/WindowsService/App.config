<configuration>

	<appSettings>
		
		<add key =		"sudoersDataStoreConnectionString"
			 value =	"E:\home\akutz\documents\projects\Sudo\sudoers.xml"
		/>

		<!--
			optional value - specify this key if you want the sudoers data source
			to have its data validated.  if the validation fails a fatal
			exception will be thrown and the service will fail to start
		-->
		<add key =		"schemaFileUri"
			 value =	"e:\home\akutz\documents\projects\Sudo\Data\FileClient\FileDataStoreSchema_v0.1.xsd"
		/>

		<!--
			uri used to access the data server object.  this cannot be configured
			in the remoting section because having a service and client object
			of the same type configured in the same config file is not supported.
		-->	
		<add key =		"dataServerUri"
			 value =	"ipc://Sudo/DataServer.rem"
		/>

		<add key =		"consoleApplicationPath"
			 value =	"e:\home\akutz\documents\projects\sudo\consoleapplication\bin\debug\sudo.consoleapplication.exe"
		/>
		
	</appSettings>
	<system.runtime.remoting>
		<application>
			<!-- this server is the immortal highlander -->
			<lifetime leaseTime="0" />

			<!--
				an immortal object used to persist user information
				between sudo invocations
			-->
			<service>
				<wellknown
					mode="Singleton"
					type="Sudo.WindowsService.DataServer, Sudo.WindowsService"
					objectUri="DataServer.rem"
				/>
			</service>

			<!--
				the sudo server object that clients will access
			-->
			<service>
				<wellknown
					mode="SingleCall"
					type="Sudo.WindowsService.SudoServer, Sudo.WindowsService"
					objectUri="SudoServer.rem"
				/>
			</service>

			<channels>
				
				<channel 
					type="System.Runtime.Remoting.Channels.Ipc.IpcServerChannel, System.Runtime.Remoting, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" 
					portName="Sudo"
					secure="True" 
					tokenImpersonationLevel="None"
					authorizedGroup="Sudoers">
					
					<serverProviders>
						<formatter ref="binary" typeFilterLevel="Full" />
						<provider
							type="System.Runtime.Remoting.Channels.BinaryServerFormatterSinkProvider, System.Runtime.Remoting, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
						/>
					</serverProviders>
				</channel>

				<channel
					type="System.Runtime.Remoting.Channels.Ipc.IpcClientChannel, System.Runtime.Remoting, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
					portName="Sudo"
					secure="True"
					tokenImpersonationLevel="Impersonation"
					useDefaultCredentials="True">

					<serverProviders>
						<formatter ref="binary" typeFilterLevel="Full" />
						<provider
							type="System.Runtime.Remoting.Channels.BinaryServerFormatterSinkProvider, System.Runtime.Remoting, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
						/>
					</serverProviders>
				</channel>
				
			</channels>
		</application>
	</system.runtime.remoting>
</configuration>